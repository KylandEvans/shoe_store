<div class="modal register-modal animate__animated" tabindex="-1">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Register</h5>
				<button
					type="button"
					class="modal-close btn-close"
					data-bs-dismiss="modal"
					aria-label="Close"
				></button>
			</div>
			<div class="modal-body">
				<form
					action="/register"
					class="form-control register-form"
					method="post"
					name="register-form"
				>
					<label for="registerFirstName">First Name: </label>
					<input
						type="text"
						name="firstName"
						id="registerFirstName"
						class="form-control register-first-name-input"
						autocomplete="given-name"
					/>
					<!-- error code 1 -->
					<div class="ms-1 mt-1 first-name-issue-span d-none">
						<span class="text-danger">First Name Cannot be empty!</span>
					</div>
					<label for="registerLastName">Last Name: </label>
					<input
						type="text"
						name="lastName"
						id="registerLastName"
						class="form-control register-last-name-input"
						autocomplete="family-name"
					/>
					<!-- error code 2 -->
					<div class="ms-1 mt-1 last-name-issue-span d-none">
						<span class="text-danger">Last Name Cannot be empty!</span>
					</div>
					<label for="registerEmail">Email: </label>
					<input
						type="email"
						name="email"
						id="registerEmail"
						class="form-control register-email-input"
						autocomplete="email"
					/>
					<!-- error code 3 -->
					<div class="ms-1 mt-1 email-issue-span d-none">
						<span class="text-danger">Email must be valid! ex. example@example.com</span>
					</div>
					<label for="registerPhone">Phone Number: </label>
					<input
						type="tel"
						name="phone"
						id="registerPhone"
						class="form-control register-phone-input"
						autocomplete="tel"
					/>
					<!-- error code 4 -->
					<div class="ms-1 mt-1 phone-issue-span d-none">
						<span class="text-danger">Phone number missing or invalid format!</span>
					</div>
					<label for="registerUsername">Username</label>
					<input
						type="text"
						name="username"
						id="username"
						class="form-control register-user-name-input"
					/>
					<!-- error code 5 -->
					<div class="ms-1 mt-1 username-missing-issue-span d-none">
						<span class="text-danger">Must enter a username!</span>
					</div>

					<label for="registerPassword">Password</label>
					<input
						type="password"
						name="password"
						id="registerPassword"
						class="form-control register-password-input"
					/>
					<!-- error code 6 -->
					<div class="ms-1 mt-1 password-issue-span d-none">
						<span class="text-danger">Password Invalid!</span>
						<div class="bg-danger">
							<ul>
								<li class="text-white">Password must contain at least one character!</li>
								<li class="text-white">Password cannot be username!</li>
								<li class="text-white"
									>Password must contain at least one upper case character!</li
								>
								<li class="text-white"
									>Password must contain at least one lower case character!</li
								>
								<li class="text-white">Password must contain at least one number!</li>
								<li class="text-white">Password must be at least 8 characters long!</li>
								<li class="text-white"
									>Password must contain at least one special character!</li
								>
								<li class="text-white"
									>Acceptable character list ("!", "@", "#", "$", "%", "^", "&", "*")</li
								>
							</ul>
						</div>
					</div>
					<label for="registerConfirmPassword">Confirm Password</label>
					<input
						type="password"
						name="confirmPassword"
						id="registerConfirmPassword"
						class="form-control register-password-check-input"
					/>
					<!-- error code 7 -->
					<div class="ms-1 mt-1 password-check-issue-span d-none">
						<span class="text-danger">Passwords don't match!</span>
					</div>
					<div class="mt-3">
						<button class="btn btn-secondary" data-bs-dismiss="modal" type="reset">
							Clear
						</button>
						<button class="btn btn-primary register-button" type="button">Register</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
