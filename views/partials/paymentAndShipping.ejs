<script>
	const paymentModalClose = document.querySelector(".payment-modal-close");
	const paymentModal = document.querySelector(".payment-modal");
	paymentModalClose.addEventListener("click", () => {
		paymentModal.style.display = "none";
	});

	const addressModalClose = document.querySelector(".address-modal-close");
	const addressModal = document.querySelector(".address-modal");
	addressModalClose.addEventListener("click", () => {
		addressModal.style.display = "none";
	});

	const ccNumber = document.querySelectorAll(".cc-num");
	const newCCArr = [];
	const saveCCBtn = document.querySelector(".saveCC");

	//Get Experation Month and save it in expMonth
	const getMonthVal = document.querySelector("#expMonth");
	let expMonth = getMonthVal.selectedOptions[0].value;
	getMonthVal.addEventListener("change", () => {
		expMonth = getMonthVal.selectedOptions[0].value;
	});

	// Get the Experation year and save it in expYear
	const getYearVal = document.querySelector("#expYear");
	let expYear = getYearVal.selectedOptions[0].value;
	getYearVal.addEventListener("change", () => {
		expYear = getYearVal.selectedOptions[0].value;
	});

	saveCCBtn.addEventListener("click", () => {
		ccNumber.forEach(item => {
			newCCArr.push(item.value);
		});
		const cardholderName = document.querySelector("#cardholderName").value;
		const newCard = newCCArr.join("");
		const newCardObj = {
			name: cardholderName,
			num: newCard,
			experationMonth: expMonth,
			experationYear: expYear,
		};
		// const lastFour = newCard.substring(12);
		if (!localStorage.length) {
			localStorage.setItem(`0`, JSON.stringify([newCardObj]));
		} else {
			let ls = JSON.parse(localStorage.getItem(`0`));
			ls.push(newCardObj);
			localStorage.clear();
			localStorage.setItem("0", JSON.stringify(ls));
			console.log(localStorage.getItem("0"));
		}
		window.location.reload();
	});
</script>
