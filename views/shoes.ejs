<% layout("layout/boilerplate") -%>
<main>
	<h1>Shop for your next style</h1>
	<div class="container">
		<div class="row row-cols-4 gx-5 gy-5">
			<% for(let product of products) {%>
			<a
				class="col-12 col-md-6 col-lg-4 col-xl-3 shoe-link"
				href="/shoes/<%= product._id %>"
			>
				<img src="<%= product.image %>" alt="" class="img-fluid" />
				<h4><%= product.name %></h4>
				<h6 class="text-muted"><%= product.subTitle %></h6>
				<h5>$<%= product.price.toFixed(2) %></h5>
			</a>
			<% } %>
		</div>
		<%- include("./partials/cart") %>
	</div>
</main>
